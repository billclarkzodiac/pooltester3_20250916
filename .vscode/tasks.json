{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Auto Backup Now",
            "type": "shell",
            "command": "${workspaceFolder}/.vscode/auto-backup.sh",
            "args": [
                "backup"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true
            },
            "problemMatcher": []
        },
        {
            "label": "Check File Corruption",
            "type": "shell",
            "command": "${workspaceFolder}/.vscode/auto-backup.sh",
            "args": [
                "check"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Build Pool Controller",
            "type": "shell",
            "command": "go",
            "args": [
                "build",
                "-o",
                "pool-controller"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [
                "$go"
            ]
        },
        {
            "label": "Run Pool Controller",
            "type": "shell",
            "command": "./pool-controller",
            "group": "test",
            "dependsOn": "Build Pool Controller",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "new"
            },
            "isBackground": true,
            "problemMatcher": []
        }
    ]
}